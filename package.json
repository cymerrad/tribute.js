{
  "name": "tribute.js",
  "version": "1.0.0",
  "description": "Server for automated sending of birthday wishes",
  "main": "lib/index",
  "types": "lib/index",
  "directories": {
    "example": "examples"
  },
  "dependencies": {
    "@types/puppeteer": "^1.10.0",
    "@types/shelljs": "^0.8.0",
    "async": "^2.6.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "lodash": "^4.17.5",
    "lusca": "^1.5.2",
    "nodemailer": "^4.4.1",
    "pug": "^2.0.0-rc.4",
    "puppeteer": "^1.4.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^22.1.3",
    "@types/jquery": "^3.2.17",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "concurrently": "^4.1.0",
    "node-sass": "^4.7.2",
    "shelljs": "^0.8.1",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "start": "yarn run build && yarn run serve",
    "build": "yarn run build-sass && yarn run build-ts && yarn run tslint && yarn run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "echo \"Error: no test specified\" && exit 1 && jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "author": "me",
  "license": "ISC"
}
