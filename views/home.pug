extends layout

block content
  .page-header
    h3 Tribute Form

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='fb_id') FB id
      .col-sm-8
        input.form-control(type='text', name='fb_id', id='fb_id', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email') Sender's email
      .col-sm-8
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='password') Sender's password
      .col-sm-8
        input.form-control(type='text', name='password', id='password')
    .form-group
      label(class='col-sm-2 control-label', for='tribute_body') Body
      .col-sm-8
        textarea.form-control(name='tribute_body', id='tribute_body', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send